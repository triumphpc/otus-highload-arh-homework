# ======================
# Application Settings
# ======================

# HTTP Server
HTTP_PORT=:8080
HTTP_READ_TIMEOUT=5s
HTTP_WRITE_TIMEOUT=5s
HTTP_IDLE_TIMEOUT=30s
HTTP_SHUTDOWN_TIMEOUT=10s

# Application
APP_ENV=development
APP_DEBUG=false
APP_SHUTDOWN_TIMEOUT=10s

# ======================
# Authentication
# ======================
AUTH_HASH_COST=10
AUTH_JWT_SECRET_KEY=your-secret-key-change-me-for-production
AUTH_JWT_DURATION=30m

# ======================
# PostgreSQL (Docker)
# ======================
PG_URL=postgres://postgres:postgres@pgpool:5432/app_db?sslmode=disable
PG_MAX_OPEN_CONNS=10
PG_MAX_IDLE_CONNS=5
PG_CONN_MAX_LIFETIME=5m
PG_CONN_MAX_IDLE_TIME=1m
PG_HEALTH_CHECK_PERIOD=30s
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db

# ======================
# Grafana Monitoring
# ======================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=strongpassword123
GRAFANA_SECURITY_SECRET_KEY=you-should-change-this-for-production